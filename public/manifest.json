{
  "manifest_version": 3,
  "name": "Focus Frame",
  "version": "1.0",
  "description": "Adds or removes a border from semantic elements on the page.",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
